<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!--    <ImageView-->
    <!--        android:layout_width=""-->
    <!--        android:layout_height="" />-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/spinner"
        android:layout_width="265dp"
        android:layout_height="82dp"
        android:elevation="8dp"
        android:entries="@array/spinner"
        android:popupBackground="@drawable/background"
        android:popupElevation="8dp"
        app:layout_constraintEnd_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="74dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button"
        app:layout_constraintEnd_toBottomOf="@+id/spinner"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="179dp"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toBottomOf="@+id/imageView"
        tools:ignore="UnknownId"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="368dp">

        <WebView
            android:id="@+id/colorDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>