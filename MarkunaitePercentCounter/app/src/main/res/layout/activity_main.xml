<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8E1B4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        style="@style/logoTextStyle"
        android:text="@string/logoTextStyle"
        />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="260dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/food" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="7"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:hint="@string/enterHint"
        android:autofillHints="@string/enterHint"
        style="@style/enterHint"
        />

    <SeekBar
        android:id="@+id/slide"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="100"
        android:min="0"
        android:progress="0"
        />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/slide"
        android:layout_below="@+id/slide"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        style="@style/percent"
        />

    <TextView
        android:id="@+id/tip"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:background="#BCBB96"
        android:text="@string/tip"
        style="@style/enterHint"
        />

    <TextView
        android:id="@+id/total"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:background="#BCBB96"
        android:text="@string/total"
        style="@style/enterHint"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:background="#BCBB96"
        android:textAllCaps="true"
        style="@style/result"
        android:text="@string/result"
       />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="20dp"
        style="@style/name"
        android:text="@string/name"/>

</LinearLayout>