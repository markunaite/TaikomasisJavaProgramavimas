<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logoTextStyle">
        <item name="android:text">@string/logoText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#807966</item>
    </style>

    <style name="buttonText">
        <item name="android:text">@string/buttonText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="outputText">
        <item name="android:text">@string/resultText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="name">
        <item name="android:text">@string/name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#807966</item>
    </style>


</resources>